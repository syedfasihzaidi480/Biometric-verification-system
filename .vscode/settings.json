{
  "typescript.tsdk": "apps/web/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Prefer diagnostics only for your projects, not nested package tsconfigs
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,

  // Hide type errors from node_modules in Problems view
  "search.exclude": {
    "**/node_modules": true,
    "**/.expo": true,
    "**/caches": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.expo/**": true,
    "**/caches/**": true
  },

  "problems.sortOrder": "severity",
  "problems.defaultViewMode": "tree"
}
